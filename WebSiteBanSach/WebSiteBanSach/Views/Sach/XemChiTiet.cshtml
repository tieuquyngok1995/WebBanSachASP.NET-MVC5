@using WebSiteBanSach.Models;
@model Sach
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}
@*css trang xemchitiet*@
<style>
    /*Ẩn div body*/
     #divNoiDungBenPhai {
        display: none;
    }

    /*Ẩn slider (Ghi chú: Thẻ section bên trang NguoiDungLayOut.cshtml )*/
    #divMenuSlider {
        display: none;
    }
    
</style>
@section footer{
    @*Thông tin sách chi tiết*@
    @*Hình ảnh*@
<div class="col-lg-12 col-md-12">
    <div class="block-info">
        <div class="col-lg-4 col-md-4">
            <img src="@Url.Content("~/HinhAnhSP/"+Model.AnhBia)" />
        </div>

        @*Thông tin*@
        <div class="col-lg-8 col-md-8">
            <div id="TenSach">@Model.TenSach</div>
            <div id="ChuDe">Chủ đề: @ViewBag.TenChuDe</div>
            <div id="NhaXuatBan">Nhà xuất bản: @ViewBag.NhaXuatBan</div>
            <div id="Mota">Nội dung tóm tắt:<br />- @Model.MoTa <br /></div>
            @*Dịch dấu chấm động đơn giá sử dụng string.Format("{0:0,0}", tham   số)*@
            <div id="Gia"><span style="color: green; font-weight: normal;">Đơn giá:</span><br /><span id="Gia"> @string.Format("{0:0,0}", @Model.GiaBan) VNĐ</span></div>
            <br />
            @using (Html.BeginForm("GioHang", "GioHang", new { @iMaSach = Model.MaSach, @strURL = Request.Url.ToString() }))
            {
                <div class="info"><input type="submit" value="Mua hàng" id="btnGioHang" class="btn btn-primary btn-primary"></div>
            }
        </div>
    </div>
    <div style="clear:both"></div>
</div>
   
}

@*Css Thông tin sách*@
<style>
    #HinhAnh {
        float: left;
    }

    #ThongTin {
        float: left;
        width: 600px;
    }

    #TenSach {
        font-weight: normal;
        font-size: 22pt;
        height: auto;
        word-wrap: break-word; /*Canh nội dung tự xuống dòng */
        color: red;
    }

    #ChuDe, #NhaXuatBan {
        font-size: 16pt;
        font-weight: normal;
        color: black;
        height: auto;
    }

    #Mota {
        font-weight: normal;
        color: black;
        word-wrap: break-word;
        height: auto;
    }

    #Gia span#Gia {
        font-weight: normal;
        color: orange;
        font-size: 25pt;
        height: auto;
    }

    
</style>
